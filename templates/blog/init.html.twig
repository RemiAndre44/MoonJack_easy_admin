{% extends 'base.html.twig' %}

{% block body %}

<div class="row justify-content-center"  style="padding-top:12vh;padding-bottom: 2vh">
    <div class="col-4" id="formLogin">
        <h3 style="text-align: center; margin-bottom: 4vh">Saisissez votre adresse mail</h3>
        <form action="{{ path('init') }}" method="post">
            <input type="email" class="form-control" required placeholder="adresse mail" name="usernameChange">
            <div class="row justify-content-center">
                <div class="col-4" id="sendMail">
                    <button type="submit" class="btn btn-success">Envoyer</button>
                </div>
            </div>
        </form>
    </div>
</div>

    <div class="row justify-content-center" style="padding-bottom: 10vh">
        <div class="col-4">
            {% if(error is defined) %}
                <div class="alert alert-warning" role="alert">
                    <div style="text-align: center">{{ error }}</div>
                </div>
            {% endif %}
            {% if(success is defined) %}
                <div class="alert alert-success" role="alert">
                    <div style="text-align: center">{{ success }}</div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
