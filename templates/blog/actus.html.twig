{% extends 'base.html.twig' %}


{% block body %}

    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">MoonJack - Actus</h1>
        </div>
        <div class="overlay"></div>
    </header>

    <div class="row justify-content-center" id="carouselActu">
        <div class="col-12 col-sm-8 col-lg-4">
            <h3 style="color: white;text-align: center;padding-top: 3rem">Les derniers articles</h3>
            <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel" >
                <div class="carousel-inner">
                    {% for i in 0..2 %}
                        <div class="carousel-item {% if i == 0 %}active{% endif %}" data-interval="100000">
                            <div class="card" >
                                <img src="{{ articles[i].image }}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">{{ articles[i].title }}</h5>
                                    <hr>
                                    <p class="card-text">{{ articles[i].content|raw }}</p>
                                    <a href="{{ articles[i].link }}" class="btn btn-outline-dark">Lien</a>
                                    <a type="button" onclick="like({{ i }})"><i class="far fa-thumbs-up" style="margin-left: 2rem" id="like{{ i }}">5</i></a>
                                </div>
                            </div>
                        </div>
                        {% set i = i+1 %}
                    {% endfor %}
