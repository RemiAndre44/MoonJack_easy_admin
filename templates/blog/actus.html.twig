{% extends 'base.html.twig' %}


{% block body %}

    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">MoonJack - Actus</h1>
        </div>
        <div class="overlay"></div>
    </header>

    <div id="carouselActu">
        <!--Carousel Wrapper-->
        <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel" >
            <!--Indicators-->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-1z" data-slide-to="1"></li>
                <li data-target="#carousel-example-1z" data-slide-to="2"></li>
            </ol>
            <!--/.Indicators-->
            <!--Slides-->
            <div class="carousel-inner" role="listbox" >
                <!--First slide-->
                {% set i=0 %}
                {% for article in articles %}
                    <div class="carousel-item {% if i == 0 %} active {% endif %}">
                        <!-- Card -->
                        <div class="card" style="margin: 0;padding: 0">

                            <!-- Card image -->
                            <div class="view overlay">
                                <img class="card-img-top" src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="Card image cap">
                                <a href="#!">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>

                            <!-- Card content -->
                            <div class="card-body" id="carouselActu">

                                <!-- Title -->
                                <h4 class="card-title">{{ article.title }}</h4>
                                <!-- Text -->
                                <p class="card-text">{{ article.content }}</p>

                                {% if article.commentaires %}
                                    <i class="far fa-comment-alt"></i>{{ article.commentaires|length }}
                                    <button type="button" class="btn btn-light-blue" onclick="showComment()" style="margin-left: 20rem">Light blue</button>
                                    <div id="comments" style="visibility: hidden">
                                        <ul>
                                            {% for commentaire in article.commentaires %}
                                                <li>{{ commentaire.contenu }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% endif %}
                                    <!-- Button -->
                                    <div style="text-align: center; margin: 2rem">
                                        <a href="{{ article.link }}" target="_blank" type="button" class="btn btn-outline-default waves-effect">Default</a>
                                    </div>

                            </div>

                        </div>
                        {% set i = i+1 %}
                        <!-- Card -->
                    </div>
                {% endfor %}
            </div>
            <!--/.Slides-->
            <!--Controls-->
            <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <!--/.Controls-->
        </div>
        <!--/.Carousel Wrapper-->
    </div>


{% endblock %}